			<DuongDanAnh Type="NVARCHAR(MAX)" />
			<SoLuongTon Type="INT" Default="0" />

			<!-- Khai báo khóa ngoại trực tiếp: FK="TênBảng.TênCột" -->
			<MaLoai Type="INT" NotNull="true" FK="LoaiSanPham.Id" />
			<MaThuongHieu Type="INT" NotNull="true" FK="ThuongHieu.Id" />

			<HienThi Type="BIT" Default="1" />
		</SanPham>

		<!-- MODULE 2: USER -->
		<NguoiDung>
			<Id Type="INT" PK="true" Identity="true" />
			<HoTen Type="NVARCHAR(100)" NotNull="true" />
			<Email Type="NVARCHAR(100)" NotNull="true" Unique="true" />
			<MatKhauHash Type="NVARCHAR(MAX)" NotNull="true" />
			<SoDienThoai Type="NVARCHAR(20)" />
			<DiaChi Type="NVARCHAR(200)" />
			<VaiTro Type="NVARCHAR(20)" Default="'Customer'" />
			<NgayTao Type="DATETIME" Default="GETDATE()" />
			<TrangThai Type="BIT" Default="1" />
		</NguoiDung>

		<PhuongThucThanhToan>
			<Id Type="INT" PK="true" Identity="true" />
			<MaNguoiDung Type="INT" NotNull="true" FK="NguoiDung.Id" />
			<TenGoiNho Type="NVARCHAR(200)" />
			<MaThe Type="NVARCHAR(100)" />
			<BonSoCuoi Type="NVARCHAR(4)" />
		</PhuongThucThanhToan>

		<!-- MODULE 3: SALES -->
		<GioHang>
			<Id Type="INT" PK="true" Identity="true" />
			<MaNguoiDung Type="INT" NotNull="true" FK="NguoiDung.Id" />
			<NgayCapNhat Type="DATETIME" Default="GETDATE()" />
		</GioHang>

		<ChiTietGioHang>
			<Id Type="INT" PK="true" Identity="true" />
			<MaGioHang Type="INT" NotNull="true" FK="GioHang.Id" />
			<MaSanPham Type="INT" NotNull="true" FK="SanPham.Id" />
			<DonGia Type="DECIMAL(18, 2)" NotNull="true" />
			<SoLuong Type="INT" NotNull="true" />
		</ChiTietGioHang>

		<DonHang>
			<Id Type="INT" PK="true" Identity="true" />
			<MaNguoiDung Type="INT" NotNull="true" FK="NguoiDung.Id" />
			<NgayDatHang Type="DATETIME" NotNull="true" />
			<TrangThaiDonHang Type="INT" Default="0" />
			<NguoiNhan_Ten Type="NVARCHAR(100)" />
			<NguoiNhan_SDT Type="NVARCHAR(20)" />
			<DiaChi_Duong Type="NVARCHAR(200)" />
			<DiaChi_ThanhPho Type="NVARCHAR(100)" />
			<DiaChi_Tinh Type="NVARCHAR(100)" />
			<TongTien Type="DECIMAL(18, 2)" />
			<GhiChu Type="NVARCHAR(MAX)" />
		</DonHang>

		<ChiTietDonHang>
			<Id Type="INT" PK="true" Identity="true" />
			<MaDonHang Type="INT" NotNull="true" FK="DonHang.Id" />
			<ItemOrdered_MaSanPham Type="INT" NotNull="true" />
			<ItemOrdered_TenSanPham Type="NVARCHAR(200)" />
			<ItemOrdered_DuongDanAnh Type="NVARCHAR(MAX)" />
			<DonGia Type="DECIMAL(18, 2)" NotNull="true" />
			<SoLuong Type="INT" NotNull="true" />
		</ChiTietDonHang>

		<!-- MODULE 4: CMS -->
		<BaiViet>
			<Id Type="INT" PK="true" Identity="true" />
			<TieuDe Type="NVARCHAR(200)" NotNull="true" />
			<HinhAnh Type="NVARCHAR(MAX)" />
			<TomTat Type="NVARCHAR(500)" />
			<NoiDung Type="NVARCHAR(MAX)" />
			<NgayDang Type="DATETIME" Default="GETDATE()" />
			<MaNguoiViet Type="INT" NotNull="true" FK="NguoiDung.Id" />
			<HienThi Type="BIT" Default="1" />
		</BaiViet>

		<Banner>
			<Id Type="INT" PK="true" Identity="true" />
			<TenBanner Type="NVARCHAR(100)" />
			<HinhAnh Type="NVARCHAR(MAX)" NotNull="true" />
			<LienKet Type="NVARCHAR(MAX)" />
			<ThuTu Type="INT" Default="0" />
			<HienThi Type="BIT" Default="1" />
		</Banner>

		<LienHe>
			<Id Type="INT" PK="true" Identity="true" />
			<HoTen Type="NVARCHAR(100)" />
			<Email Type="NVARCHAR(100)" />
			<SoDienThoai Type="NVARCHAR(20)" />
			<NoiDung Type="NVARCHAR(MAX)" />
			<NgayGui Type="DATETIME" Default="GETDATE()" />
			<DaXem Type="BIT" Default="0" />
		</LienHe>
